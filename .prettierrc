{
  "overrides": [
    {
      "files": "*.ts",
      "options": {
        "importOrderParserPlugins" : ["classProperties", "decorators-legacy", "typescript"],
        "importOrder": ["^[./]", "^@app/(.*)$"],
        "importOrderSeparation": true,
        "importOrderSortSpecifiers": true
      }
    }
  ],
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": false,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  "bracketSameLine": true,
  "quoteProps": "as-needed",
  "proseWrap": "always"
}
